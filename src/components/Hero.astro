---
import Section from './Section.astro';
import Social from './Social.astro';
import GradientCard from './GradientCard.astro';
import AboutMe from './AboutMe.astro';
import type Identity from '../types/identity';
const site = Astro.site;
const identity: Identity = {
	nickName: 'ねおさん',
	iconPath: '/images/my_icon.png',
	city: '都内',
	job: 'Web系エンジニア',
	techStack: ['TypeScript', 'Vue', 'Python', 'AWS'],
	interests: [
		'🌅 朝活',
		'🎮 ゲーム',
		'📚 読書',
		'🏃 ランニング',
		'🎯 ダーツ',
		'🎾 テニス',
		'🔈 ポッドキャスト'
	]
};
---

<Section>
	<div>
		<!-- ヒーローセクション -->
		<div class="pt-12 pb-8 text-center">
			<div class="mb-6">
				<h1
					class="mb-2 text-5xl font-bold text-white drop-shadow-lg md:text-6xl dark:text-gray-100"
					style="font-family: 'Tahoma', 'MS UI Gothic', sans-serif; text-shadow: 2px 2px 4px rgba(0,0,0,0.8), 0 0 10px rgba(255,255,255,0.1);"
				>
					A Engineer's Freedom Blog
				</h1>
			</div>
		</div>

		<!-- About Me セクション -->
		<AboutMe {...identity} />

		<!-- Blog Categories -->
		<div class="mb-12 grid gap-6 md:grid-cols-2">
			<!-- テック記事 -->
			<div class="group transition-transform duration-300 hover:scale-105">
				<GradientCard class="h-full">
					<div class="mb-4 flex items-center">
						<span class="mr-3 text-3xl">💻</span>
						<h3 class="text-xl font-bold text-blue-800 dark:text-blue-300">テック記事</h3>
					</div>
					<p class="mb-4 leading-relaxed text-gray-600 dark:text-gray-300">
						技術について学んだことや試してみたことをまとめています。
					</p>
					<a
						href="/tags/技術"
						class="inline-flex items-center font-medium text-blue-600 transition-colors hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
					>
						記事を見る
						<svg
							class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
							></path>
						</svg>
					</a>
				</GradientCard>
			</div>

			<!-- 雑談記事 -->
			<div class="group transition-transform duration-300 hover:scale-105">
				<GradientCard class="h-full">
					<div class="mb-4 flex items-center">
						<span class="mr-3 text-3xl">☕️</span>
						<h3 class="text-xl font-bold text-purple-800 dark:text-purple-300">雑談・日記</h3>
					</div>
					<p class="mb-4 leading-relaxed text-gray-600 dark:text-gray-300">
						技術に限らず日々思ったことや気づいたことを書いています。
					</p>
					<a
						href="/tags/ノート"
						class="inline-flex items-center font-medium text-purple-600 transition-colors hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300"
					>
						記事を見る
						<svg
							class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
							></path>
						</svg>
					</a>
				</GradientCard>
			</div>
		</div>

		<!-- Social Links -->
		<div class="flex justify-center">
			<Social href="https://github.com/ne0san">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-4 w-4"
					fill="currentColor"
					viewBox="0 0 24 24"
					><title>GitHub</title>
