---
import type Identity from '../types/identity';
import GradientCard from './GradientCard.astro';
import CircleImage from './CircleImage.astro';

const { nickName, iconPath, city, job, techStack, interests } = Astro.props as Identity;
---

<!-- About Me セクション -->
<GradientCard class="mb-12">
	<h2 class="mb-6 flex items-center text-2xl font-bold">
		<span class="mr-3">🙋‍♀️</span>
		About Me
	</h2>
	<div class="leading-relaxed text-gray-700 dark:text-gray-300">
		<div class="mb-6 flex items-start gap-4">
			<CircleImage src={iconPath} alt="プロフィール画像" size="md" />
			<div class="flex-1">
				<p class="mb-2">{nickName} と名乗っています。</p>
				<p class="mb-4">{city}で働く{job}です。</p>
			</div>
		</div>

		<!-- Tech Stack と Interests -->
		<div class="grid gap-6 md:grid-cols-2">
			<div class="rounded-lg bg-white/50 p-4 shadow-sm dark:bg-gray-800/50">
				<h3 class="mb-3 flex items-center text-lg font-semibold text-gray-800 dark:text-gray-200">
					<span class="mr-2">🛠️</span>Tech Stack
				</h3>
				<div class="flex flex-wrap gap-2">
					{
						techStack.map((tech) => (
							<span class="rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800 dark:bg-blue-900 dark:text-blue-200">
								{tech}
							</span>
						))
					}
				</div>
			</div>

			<div class="rounded-lg bg-white/50 p-4 shadow-sm dark:bg-gray-800/50">
				<h3 class="mb-3 flex items-center text-lg font-semibold text-gray-800 dark:text-gray-200">
					<span class="mr-2">💡</span>Interests
				</h3>
				<div class="flex flex-wrap gap-2">
					{
						interests.map((interest) => (
							<span class="rounded-full bg-purple-100 px-3 py-1 text-sm font-medium text-purple-800 dark:bg-purple-900 dark:text-purple-200">
								{interest}
							</span>
						))
					}
				</div>
			</div>
		</div>
	</div>
</GradientCard>
